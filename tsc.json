{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": "../../../src/",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "outDir": "../../../dist/",
        "newLine": "lf",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["../../../src/**/*.ts"],
    "exclude": ["../../../src/**/*.test.ts"]
}
